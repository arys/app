<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Creater</th>
      <th>Opponent</th>
      <th>Subject</th>
      <th>Status</th>
      <th>Creater scores</th>
      <th>Opponent scores</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.creater_id %></td>
        <td><%= game.opponent_id %></td>
        <td><%= game.subject_id %></td>
        <td><%= game.status %></td>
        <td><%= game.creater_scores %></td>
        <td><%= game.opponent_scores %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

